{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "IoT Border Gateway Auth Server",
        "description": "https://github.com/hareeqi/iot-bgw-auth-server"
    },
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "definitions": {
          "GetAllUsers": {
            "title": "User",
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "valid_from": {
                    "type": "integer"
                },
                "valid_to": {
                    "type": "integer"
                },            
                "suspended": {
                  "type": "boolean"
                },
                "rules_policy_deny_match": {
                  "type": "boolean"
                }
            }
        },
        "GetUser": {
            "title": "User",
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "created": {
                    "type": "integer"
                },
                "updated": {
                    "type": "integer"
                },
                "issued": {
                    "type": "integer"
                },
                "valid_from": {
                    "type": "integer"
                },
                "valid_to": {
                    "type": "integer"
                },
                "password": {
                    "type": "string"
                },                
                "suspended": {
                  "type": "boolean"
                },
                "rules_policy_deny_match": {
                  "type": "boolean"
                }
            }
        },
        "PatchUser": {
            "title": "User",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "valid_from": {
                    "type": "integer"
                },
                "valid_to": {
                    "type": "integer"
                },               
                "suspended": {
                  "type": "boolean"
                },
                "rules_policy_deny_match": {
                  "type": "boolean"
                }
            }
        },
        "PostUser": {
          "title": "User",
            "type": "object",
            "properties": {
                 "user_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "valid_from": {
                    "type": "integer"
                },
                "valid_to": {
                    "type": "integer"
                },                
                "suspended": {
                  "type": "boolean"
                },
                "rules_policy_deny_match": {
                  "type": "boolean"
                }
            }
        },
        "KeyRes": {
          "title": "key",
            "type": "object",
            "properties": {
                 "key": {
                    "type": "string"
                }
            }
        },
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        }
    },
    "responses": {
        "RespInternalServerError": {
            "description": "Internal Server Error",
            "schema": {
                "$ref": "#/definitions/ErrorResponse"
            }
        },
        "Key": {
            "description": "New key issued",
            "schema": {
                "$ref": "#/definitions/KeyRes"
            }
        }
    },
    "paths": {
        "/user/":{
          "get": {
            "summary": "Retrieves users list",
            "responses": {
                "200": {
                    "description": "Successful response",
                    "schema": {
                        "$ref": "#/definitions/GetAllUsers"
                    }
                },
                "500": {
                    "$ref": "#/responses/RespInternalServerError"
                }
            }
          },
          "post": {
              "summary": "Creates new user",
                "parameters": [
                    {
                        "name": "profile",
                        "description": "All feilds are optional",
                        "in": "body",
                        "required": false,
                        "schema": {
                            "$ref": "#/definitions/PostUser"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "$ref":"#/responses/Key"
                    },
                    "500": {
                        "$ref": "#/responses/RespInternalServerError"
                    }
                }
            },
        },
        "/user/{id}": {
            "get": {
                "summary": "Retrieves the full profile of a single user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the user",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "$ref":"#/definitions/GetUser"
                        }
                    },
                    "500": {
                        "$ref": "#/responses/RespInternalServerError"
                    }
                }
            },
            "patch": {
                "summary": "Updates the full profile of a single user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description":  "ID of the user",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "user",
                        "description":  "user profile",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/PatchUser"
                        }
                    }
                ],
                "responses": {
                    "500": {
                        "$ref": "#/responses/RespInternalServerError"
                    }
                }
            },
            "delete": {
                "summary": "Deletes a user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the user",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "500": {
                        "$ref": "#/responses/RespInternalServerError"
                    }
                }
            }
        },
        "/user/{id}/renew_key": {
            "post": {
                "summary": "Revoke the old key and create a new one",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description":  "ID of the user",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref":"#/responses/Key"
                    },
                    "500": {
                        "$ref": "#/responses/RespInternalServerError"
                    }
                }
            }
        }
    }
}
